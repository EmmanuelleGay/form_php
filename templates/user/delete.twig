{% extends "base.twig" %}
{% block title %}Delete User
{% endblock %}
{% block contentTitle %}View User Information
{% endblock %}

{% block content %}
	<div class="row justify-content-center">
		<div class="col-fluid ">
			<div class="card text-white bg-dark mb-3">
				<div class="card-body">
					<form class="form-horizontal" action="{{ baseUrl }}delete/{{ user.id }}" method="post">
						<h5 class="card-title">Are you sure you want to delete <em>{{ user.firstName }} {{ user.lastName }}</em>?</h5>
						<div class="mt-3">
							<button type="submit" value=1 name="delete" class="btn btn-primary">Yes</button>
							<a class="btn btn-info" href="{{ baseUrl }}">No</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
