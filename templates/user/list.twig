{% extends "base.twig" %}
{% block title %}User List{% endblock %}
{% block contentTitle %}User List{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="col">
        <table class="table table-responsive-sm table-striped table-bordered">
            <thead class="thead-dark">
                <th>First Name</th>
                <th>Last Name</th>
                <th>Birth Date</th>
                <th>Tel</th>
                <th>Country</th>
                <th>Email</th>
                <th>Comment</th>
                <th>job</th>
                <th>Url</th>
                <th colspan="3"></th>
            </thead>
            <tbody>
                {% for user in users %}
                        <tr>
                            <td>{{user.firstName}}</td>
                            <td>{{user.lastName}}</td>
                            <td>{{user.birthDate}}</td>
                            <td>{{user.tel}}</td>
                            <td>{{user.country}}</td>
                            <td>{{user.email}}</td>
                            <td>{{user.comment}}</td>
                            <td>{{user.job}}</td>
                            <td>{{user.url}}</td>
                            <td class='table-success'><a class='btn' href='{{ baseUrl }}read/{{user.id}}'>Read</a></td>
                            <td class='table-danger'><a class='btn' href='{{ baseUrl }}edit/{{user.id}}'>Edit</a></td>
                            <td class='table-primary'><a class='btn' href='{{ baseUrl }}delete/{{user.id}}'>Delete</a></td>
                        </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ baseUrl }}edit" class="btn btn-success mb-2">Add User</a>
    </div>
</div>
{% endblock %}